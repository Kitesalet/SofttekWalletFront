@model Data.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    var modele = Model;
}

<head>
     <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .custom-card {
            width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 2px solid #007BFF;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .custom-card-title {
            font-size: 24px;
            color: #007BFF;
        }

        .custom-card-icon {
            font-size: 4em;
            color: #17A2B8;
        }

        .custom-card-text {
            font-size: 18px;
            color: #333;
        }
    </style>
</head>
<body>
<div class="text-center">
    <h1 class="display-4">Welcome to ChazaWallet!</h1>
</div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="custom-card text-center mb-4">
                    <i class="fas fa-dollar-sign custom-card-icon mb-3"></i>
                    <h5 class="custom-card-title">Dollar to Pesos</h5>
                    <p class="custom-card-text">1 USD = 400 Pesos</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="custom-card text-center">
                    <i class="fab fa-bitcoin custom-card-icon mb-3"></i>
                    <h5 class="custom-card-title">ChazaCrypto to Dollars</h5>
                    <p class="custom-card-text">1 ChazaCrypto = 100 USD</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container custom-description">
        <div class="row">
            <div class="col-md-6">
                <h2>About ChazaWallet</h2>
                <p>ChazaWallet is your trusted digital wallet, providing a secure and convenient way to manage your finances. We are a startup wallet created by Softtek Company, a leader in innovative technology solutions.</p>
                <p>With ChazaWallet, you can easily exchange currencies, track your transactions, and make payments with confidence. Our user-friendly platform is designed to meet your financial needs, whether you're a seasoned investor or just starting your financial journey.</p>
            </div>
            <div class="col-md-6">
                <img src="/images/Chazawallet.JPG" alt="ChazaWallet Startup" class="startup-image">
            </div>
        </div>
    </div>

<script>
    @if(modele != null)
    {
        <text>
            localStorage.setItem('token', '@modele.Token');
            localStorage.setItem('id', '@modele.Actor')
        </text>
    }
</script>
</body>