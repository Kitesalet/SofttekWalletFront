@model Data.ViewModels.AccountViewModel

<div class="modal fade" id="clientModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Alta y/o modificación de Usuarios.</h5>
            </div>

            @if (Model.Id != 0)
            {
                if(Model.Type == 3)
                {
                    @using (Html.BeginForm("InformationAccount", "/Account", FormMethod.Post))
                    {
                        @Html.HiddenFor(e => e.Id)
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-12 text-center mb-3">
                                    <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                    <h3>ChazaCrypto</h3>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Client Id</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.ClientId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">UUID</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.UUID, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Type</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.Type, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    }
                }
                else if(Model.Type == 2)
                {
                    @using (Html.BeginForm("InformationAccount", "/Account", FormMethod.Post))
                    {
                        <div class="modal-body">
                            <div class="row">
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <label class="col-md-4 form-control-label"></label>
                                    </div>
                                    <div class="col-md-6 text-center mb-3">
                                        <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                        <h3>Dollar</h3>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <label class="col-md-4 form-control-label">Client Id</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.EditorFor(x => x.ClientId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                    </div>
                                </div>
                                <div class="col-md-6 mt-1 mb-3">
                                    <label class="col-md-4 form-control-label">Account Number</label>
                                    @Html.EditorFor(x => x.AccountNumber, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                                <div class="col-md-6 mt-1 mb-3">
                                    <label class="col-md-2 form-control-label">Alias</label>
                                    @Html.EditorFor(x => x.Alias, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Dni</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.CBU, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Type</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.Type, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    }
                }
                else
                {
                    @using (Html.BeginForm("InformationAccount", "/Account", FormMethod.Post))
                    {
                        <div class="modal-body">
                            <div class="row">
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <label class="col-md-4 form-control-label"></label>
                                    </div>
                                    <div class="col-md-6 text-center mb-3">
                                        <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                        <h3>Peso</h3>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <label class="col-md-4 form-control-label">Client Id</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.EditorFor(x => x.ClientId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                    </div>
                                </div>
                                <div class="col-md-6 mt-1 mb-3">
                                    <label class="col-md-4 form-control-label">Account Number</label>
                                    @Html.EditorFor(x => x.AccountNumber, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                                <div class="col-md-6 mt-1 mb-3">
                                    <label class="col-md-2 form-control-label">Alias</label>
                                    @Html.EditorFor(x => x.Alias, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Dni</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.CBU, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Type</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.Type, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    }


                }             
          }

           
        </div>
    </div>
</div>