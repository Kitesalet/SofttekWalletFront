@model Data.ViewModels.AccountViewModel

<div class="modal fade" id="accountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Account Information</h5>
            </div>

          @if (Model.Id != 0)
          {
                if(Model.Type == "Crypto")
                {
                  
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-12 text-center mb-3">
                                    <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                    <h3>ChazaCrypto</h3>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Client Id</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.ClientId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">UUID</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.UUID, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label class="col-md-4 form-control-label">Type</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(x => x.Type, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    
                }
                else if(Model.Type == "Dollar")
                {

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 text-center mb-3">
                                <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                <h3>Dollar</h3>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Client Id</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.ClientId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Account Number</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.AccountNumber, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Alias</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.Alias, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">CBU</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.CBU, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Type</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.Type, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>

                    
                }
                else
                {

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 text-center mb-3">
                                <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                <h3>Peso</h3>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Client Id</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.ClientId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Account Number</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.AccountNumber, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Alias</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.Alias, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">CBU</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.CBU, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="col-md-4 form-control-label">Type</label>
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(x => x.Type, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            </div>
                        </div>
                    </div>

                    
                }             
          }

           
        </div>
    </div>
</div>