@model Data.ViewModels.AccountViewModel

<div class="modal fade" id="extractModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Extract Money</h5>
            </div>


            @using (Html.BeginForm("AccountExtract", "/Account", FormMethod.Post, new { id = "extractForm" }))
            {
                @if (Model.Type == "Crypto")
                {
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 text-center mb-3">
                                <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                <h3>Withdraw ChazaCrypto</h3>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.Type == "Dollar")
                {
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 text-center mb-3">
                                <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                <h3>Withdraw Dollars</h3>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 text-center mb-3">
                                <i class="fas fa-info-circle" style="font-size: 2em;"></i>
                                <h3>Withdraw Pesos</h3>
                            </div>
                        </div>
                    </div>
                }

                @Html.HiddenFor(e => e.Id)
                @Html.HiddenFor(e => e.ClientId)
                <div class="modal-body">
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="col-md-4 form-control-label">Money to Withdraw</label>
                        </div>
                        <div class="col-md-6">
                            @Html.EditorFor(x => x.Balance, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="ExtractHandler()">Accept Extraction</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>
